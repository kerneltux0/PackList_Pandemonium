<h1><center>Create a new PackList!</center></h1>
<br>
<a href='/home'>Return Home</a><br>
<br>
<form action='/list/new' method='post'>
  <input type='text' id='list_name' name='name' placeholder='List Name'><br>
  <br>
  <p>========General========</p>
  <ul>
    <%@general.each do |item|%>
      <li><input type='checkbox' name='item[<%=item%>]'><%=item.gsub(/_/,' ').capitalize!%></li>
    <%end%>
  </ul>
  <br>
  <p>========Electronics========</p>
  <ul>
    <%@electronics.each do |item|%>
      <li><input type='checkbox' name='item[<%=item%>]'><%=item.gsub(/_/,' ').capitalize!%></li>
    <%end%>
  </ul>
  <br>
  <p>========Camping========</p>
  <ul>
    <%@camping.each do |item|%>
      <li><input type='checkbox' name='item[<%=item%>]'><%=item.gsub(/_/,' ').capitalize!%></li>
    <%end%>
  </ul>
  <br>
  <p>========Toiletries========</p>
  <ul>
    <%@toiletries.each do |item|%>
      <li><input type='checkbox' name='item[<%=item%>]'><%=item.gsub(/_/,' ').capitalize!%></li>
    <%end%>
  </ul>
  <br>
  <p>========Clothing=======</p>
  <ul>
    <%@clothing.each do |item|%>
      <li><input type='checkbox' name='item[<%=item%>]'><%=item.gsub(/_/,' ').capitalize!%></li>
    <%end%>
  </ul>
  <br>
  <input type='submit' value='Create List'>
</form>